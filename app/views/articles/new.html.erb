<h1>Create a new article</h1>

<% if @article.errors.any? %>
<h4>Oops.. It looks like something went wrong:</h4>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>

  <% end %>
</ul>
<% end %>


<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  
  <P>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </P>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>